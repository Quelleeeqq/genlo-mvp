# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# AI Services
ANTHROPIC_API_KEY=your_anthropic_api_key
TOGETHER_API_KEY=your_together_api_key

# OpenAI (Required for Deep Research, Reasoning, and Image Generation)
OPENAI_API_KEY=your_openai_api_key

# Google Vertex AI (Alternative to Anthropic API)
GOOGLE_CLOUD_PROJECT_ID=your_google_cloud_project_id
GOOGLE_CLOUD_REGION=us-east5

# Image Generation APIs
OPENAI_API_KEY=your_openai_api_key
REPLICATE_API_TOKEN=your_replicate_api_token
GOOGLE_AI_STUDIO_API_KEY=your_google_ai_studio_api_key

# Veo 3 Video Generation APIs
# Choose one of the following providers:

# Option 1: Google AI Studio (Recommended - $20/month subscription)
VEO3_PROVIDER=google-ai-studio
VEO3_API_KEY=your_google_ai_studio_api_key
# Note: Use Google AI Pro subscription for Veo 3 access

# Option 2: Google Cloud Vertex AI (Alternative - requires service account)
# VEO3_PROVIDER=google-cloud
# GOOGLE_CLOUD_PROJECT_ID=your_google_cloud_project_id
# VEO3_API_KEY=your_service_account_private_key

# Option 3: Replicate (Pay per use)
# VEO3_PROVIDER=replicate
# VEO3_API_KEY=your_replicate_api_key
# REPLICATE_API_TOKEN=your_replicate_api_token  # Alternative name for Replicate API key

# Option 4: AI/ML API (Pay per use)
# VEO3_PROVIDER=aimlapi
# VEO3_API_KEY=your_aimlapi_api_key

# Option 5: Pollo AI (Pay per use)
# VEO3_PROVIDER=pollo
# VEO3_API_KEY=your_pollo_api_key

# Arcads.ai Configuration (for AI actors)
ARCADSAI_API_KEY=your_arcadsai_api_key

# Stripe Configuration (for payments)
STRIPE_SECRET_KEY=sk_test_...
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...

# Subscription Plans
STRIPE_PRO_PLAN_PRICE_ID=price_...
STRIPE_ENTERPRISE_PLAN_PRICE_ID=price_...

# Application Configuration
NEXT_PUBLIC_BASE_URL=http://localhost:3000
NODE_ENV=development

# Optional: Video Processing
# FFMPEG_PATH=/usr/local/bin/ffmpeg  # Path to FFmpeg for video merging
# CLOUDINARY_URL=your_cloudinary_url  # For video storage and CDN

# SECURITY NOTES:
# - Never commit your .env.local file to version control
# - Keep your API keys secure and rotate them regularly
# - Only use NEXT_PUBLIC_ prefix for variables that need to be exposed to the browser
# - All API calls are made server-side to protect your keys
# - Monitor your API usage to prevent unauthorized access 